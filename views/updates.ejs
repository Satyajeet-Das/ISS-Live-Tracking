<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ISS Tracker</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css"
    />
    <script src="/socket.io/socket.io.js"></script>
    <style>
      #map {
        height: 500px;
      }
    </style>
  </head>
  <body class="bg-gray-900 text-white flex flex-col min-h-screen">
    <!-- Header -->
    <%-include("partials/header.ejs") %>
    <div class="px-12 py-12 grid gap-8 grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
        <% news.forEach(n => { %>
            <% if(n.title != "[Removed]"){ %>
            <div class="bg-slate-800 rounded-lg shadow-xl ring-1 ring-slate-900/5 p-6 max-w-sm">
                <img
                  src="<%= n.urlToImage %>"
                  alt="News Image"
                  class="w-full h-48 object-cover rounded-lg"
                />
                <h3 class="text-white text-xl font-semibold mt-4">
                  <%= n.title %>
                </h3>
                <p class="text-slate-400 mt-2">
                  <%= n.content %>
                </p>
                <a
                  href="<%= n.url %>"
                  target="_blank"
                  class="mt-4 inline-block text-indigo-500 hover:underline"
                >
                  Read more
                </a>
                <p class="text-slate-500 mt-2 text-sm">
                  Published on: <%= new Date(n.publishedAt).toLocaleDateString() %>
                </p>
            </div>
            <% } %>
        <% }) %>
    </div>
    
      

    <!-- Footer -->
    <%-include("partials/footer.ejs") %>

    <!-- <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script> -->
    <!-- <script src="script.js"></script> -->
  </body>
</html>
