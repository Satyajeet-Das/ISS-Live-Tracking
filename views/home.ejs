<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ISS Tracker</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css"
    />
    <script src="/socket.io/socket.io.js"></script>
    <style>
      #map {
        height: 500px;
      }
    </style>
  </head>
  <body class="bg-gray-900 text-white flex flex-col min-h-screen">
    <!-- Header -->
    <%-include("partials/header.ejs") %>
    <div class="flex-1 px-12 py-12 grid gap-8 grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-2">
      <a href="/map" class="flex flex-col bg-slate-800 rounded-lg px-6 py-8 ring-1 ring-slate-900/5 shadow-xl hover:shadow-2xl transition-shadow duration-300">
        <img
          src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSZH8P8c5LYnWJrcChawaAq1rc0U1U8JZ-g0Q&s"
          alt="RealTime Location"
          class="w-full h-72 object-cover rounded-lg"
        />
        <div class="flex-grow mt-4">
          <div class="flex-grow">
            <svg
              class="h-6 w-6 text-white"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              aria-hidden="true"
            >
              <!-- SVG content goes here -->
            </svg>
          </div>
          <h3 class="text-white mt-5 text-xl font-medium tracking-tight">
            RealTime Location
          </h3>
          <p class="text-slate-400 mt-2 text-sm">Get RealTime Location of ISS</p>
        </div>
      </a>
    
      <a href="/update" class="flex flex-col bg-slate-800 rounded-lg px-6 py-8 ring-1 ring-slate-900/5 shadow-xl hover:shadow-2xl transition-shadow duration-300">
        <img
          src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTQyvlewKfRWmI9ci7s78tgatlFKEYYkxwNsg&s"
          alt="RealTime News"
          class="w-full h-72 object-cover rounded-lg"
        />
        <div class="flex-grow mt-4">
          <div class="flex-grow">
            <svg
              class="h-6 w-6 text-white"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              aria-hidden="true"
            >
              <!-- SVG content goes here -->
            </svg>
          </div>
          <h3 class="text-white mt-5 text-xl font-medium tracking-tight">
            RealTime News of ISS
          </h3>
          <p class="text-slate-400 mt-2 text-sm">Get RealTime Updates</p>
        </div>
      </a>
    </div>
    
    

    <!-- Footer -->
    <%-include("partials/footer.ejs") %>

    <!-- <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script> -->
    <!-- <script src="script.js"></script> -->
  </body>
</html>
